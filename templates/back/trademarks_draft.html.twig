{% extends 'base.html.twig' %}

{% block title %}{% if edit is defined %}Modifer une marque{% else %}Ajouter une marque{% endif %} - {{ parent() }}{% endblock %}

{% block body %}
<div class="wp">
    <div class="title">
        <h1>{% if edit is defined %}Modifer une marque{% else %}Ajouter une marque{% endif %}</h1>
    </div>
    {{ form_start(form, {'attr': {'class': 'form'}}) }}
        <div class="form-error">{{ form_errors(form) }}</div>
        <div class="form-group">
            {{ form_label(form.type) }}
            {{ form_widget(form.type) }}
            {% if form.type.vars.valid == 0 %}
            <div class="form-error">
                {{ form_errors(form.type) }}
            </div>
            {% endif %}
        </div>
        <div class="form-group">
            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}
            {% if form.name.vars.valid == 0 %}
            <div class="form-error">
                {{ form_errors(form.name) }}
            </div>
            {% endif %}
        </div>
        <div class="form-group">
            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
            {% if form.description.vars.valid == 0 %}
            <div class="form-error">
                {{ form_errors(form.description) }}
            </div>
            {% endif %}
        </div>
        <div class="form-group">
            {{ form_label(form.file) }}
            {{ form_widget(form.file) }}
            {% if form.file.vars.valid == 0 %}
            <div class="form-error">
                {{ form_errors(form.file) }}
            </div>
            {% endif %}
        </div>
        <div class="form-group">
            <label>
                {{ form_widget(form.status) }}
                <span></span>
                Verifi√©
            </label>
            {% if form.status.vars.valid == 0 %}
            <div class="form-error">
                {{ form_errors(form.status) }}
            </div>
            {% endif %}
        </div>
        <div class="pt-20 text-center">
            <button type="submit" class="btn btn-primary btn-lg">Enregistrer{% if edit is defined %} les modifications{% else %}{% endif %}</button>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}